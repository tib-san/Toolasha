{
  "name": "toolasha",
  "version": "0.5.04",
  "description": "Toolasha - Enhanced tools for Milky Way Idle",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "test": "echo \"Tests coming soon\" && exit 0",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"*.config.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"*.config.js\"",
    "prepare": "husky"
  },
  "keywords": [
    "userscript",
    "milkywayidle",
    "tampermonkey"
  ],
  "author": "bot7420",
  "license": "CC-BY-NC-SA-4.0",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rollup": "^4.9.5",
    "rollup-plugin-banner2": "^1.2.2"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.config.js": [
      "prettier --write"
    ]
  }
}
