{
    "name": "toolasha",
    "version": "0.5.35",
    "description": "Toolasha - Enhanced tools for Milky Way Idle",
    "type": "module",
    "scripts": {
        "build": "rollup -c",
        "watch": "rollup -c -w",
        "dev": "rollup -c -w",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix",
        "format": "prettier --write \"src/**/*.js\" \"*.config.js\" \"**/*.md\"",
        "format:check": "prettier --check \"src/**/*.js\" \"*.config.js\" \"**/*.md\"",
        "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
        "lint:md:fix": "markdownlint \"**/*.md\" --ignore node_modules --fix",
        "lint:md:links": "find . -name '*.md' ! -path './node_modules/*' -exec markdown-link-check --quiet {} \\;",
        "version:sync": "node scripts/sync-version.js",
        "version:patch": "npm version patch --no-git-tag-version && npm run version:sync",
        "version:minor": "npm version minor --no-git-tag-version && npm run version:sync",
        "version:major": "npm version major --no-git-tag-version && npm run version:sync",
        "prepare": "husky"
    },
    "keywords": [
        "userscript",
        "milkywayidle",
        "tampermonkey"
    ],
    "author": "bot7420",
    "license": "CC-BY-NC-SA-4.0",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^17.1.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "markdown-link-check": "^3.14.2",
        "markdownlint-cli": "^0.47.0",
        "prettier": "^3.8.1",
        "rollup": "^4.9.5",
        "rollup-plugin-banner2": "^1.2.2",
        "vitest": "^4.0.18"
    },
    "lint-staged": {
        "package.json": [
            "node scripts/sync-version.js",
            "git add userscript-header.txt README.md src/main.js"
        ],
        "src/**/*.js": [
            "eslint --fix",
            "prettier --write",
            "bash -c 'npm test'",
            "bash -c 'npm run build'"
        ],
        "*.config.js": [
            "prettier --write"
        ],
        "*.md": [
            "prettier --write",
            "markdownlint --fix"
        ]
    }
}
